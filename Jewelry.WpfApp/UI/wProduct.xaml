<Window x:Class="Jewelry.WpfApp.UI.wProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jewelry.WpfApp.UI"
        mc:Ignorable="d"
        Title="Product" Height="950" Width="1300">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Currency Form" Margin="10">
            <Grid Height="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Labels and TextBoxes with updated names -->
                <Label Content="Product Id"
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="0" Grid.Row="0"/>
                <TextBox Grid.Row="0" 
                         Grid.Column="1" 
                         x:Name="ProductId" 
                         Height="25" 
                         Text="{Binding Path=ProductId, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Name" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="2" 
                       Grid.Row="0" />
                <TextBox Grid.Row="0" 
                         Grid.Column="3" 
                         x:Name="Name" Height="25" 
                         Text="{Binding Path=Name, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>
                <Label Content="Category Id" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="4" 
                       Grid.Row="0"/>
                <TextBox Grid.Row="0" 
                         Grid.Column="5" 
                         x:Name="CategoryId" 
                         Height="25" 
                         Text="{Binding Path=CategoryId, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Description" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="0" 
                       Grid.Row="1" 
                       Height="50" />
                <TextBox Grid.Row="1" 
                         Grid.Column="1" 
                         x:Name="Description" 
                         Height="25" 
                         Text="{Binding Path=Description, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Barcode" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="2" 
                       Grid.Row="1"/>
                <TextBox Grid.Row="1" 
                         Grid.Column="3" 
                         x:Name="Barcode" 
                         Height="25" 
                         Text="{Binding Path=Barcode, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Weight" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="4" 
                       Grid.Row="1" />
                <TextBox Grid.Row="1" 
                         Grid.Column="5" 
                         x:Name="Weight" 
                         Height="25" 
                         Text="{Binding Path=Weight, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Cost Price" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="0" 
                       Grid.Row="2"/>
                <TextBox Grid.Row="2" 
                         Grid.Column="1" 
                         x:Name="CostPrice" 
                         Height="25" 
                         Text="{Binding Path=CostPrice, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Gold Price" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="2" 
                       Grid.Row="2"/>
                <TextBox Grid.Row="2" 
                         Grid.Column="3" 
                         x:Name="GoldPrice" 
                         Height="25" 
                         Text="{Binding Path=GoldPrice, Mode=TwoWay}" 
                         Margin="5,13,0,12" Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Labor Cost" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="4" 
                       Grid.Row="2"/>
                <TextBox Grid.Row="2" 
                         Grid.Column="5" 
                         x:Name="LaborCost" 
                         Height="25" 
                         Text="{Binding Path=LaborCost, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Stone Cost" 
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center" 
                       Grid.Column="0" 
                       Grid.Row="3" />
                <TextBox Grid.Row="3" 
                         Grid.Column="1" 
                         x:Name="StoneCost"
                         Height="25" 
                         Text="{Binding Path=StoneCost, Mode=TwoWay}" 
                         Margin="5,13,0,12" 
                         Width="180" 
                         HorizontalAlignment="Center"/>

                <Label Content="Sell Price Ratio"
                       HorizontalAlignment="Center" 
                       VerticalContentAlignment="Center"
                       Grid.Column="2" Grid.Row="3"/>
                <TextBox Grid.Row="3" 
                         Grid.Column="3" 
                         x:Name="SellPriceRatio"
                         Height="25"
                         Text="{Binding Path=SellPriceRatio, Mode=TwoWay}" 
                         Margin="5,13,0,12"
                         Width="180" 
                         HorizontalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <StackPanel Height="40" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonSave" Content="Save" Height="30" Width="80"
            Command="{Binding SaveCommand}" Click="ButtonSave_Click"/>
            <Button x:Name="ButtonUpdate" Content="Update" Height="30" Width="80" 
            Command="{Binding UpdateCommand}" Margin="5,0,10,0" Visibility="Collapsed" Click="ButtonUpdate_Click"/>
            <Button x:Name="ButtonCancel" Content="Cancel" Height="30" Width="80" 
            Command="{Binding ResetCommand}" Margin="5,0,10,0" Click="ButtonCancel_Click"/>
        </StackPanel>
        <StackPanel Height="210">
            <DataGrid x:Name="grdProduct" AutoGenerateColumns="False" ItemsSource="{Binding ProductList}" CanUserAddRows="False" Height="200" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Id" Binding="{Binding Path=ProductId, Mode=TwoWay }" Width="100"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" Width="150"/>
                    <DataGridTextColumn Header="Category Id" Binding="{Binding Path=CategoryId}" Width="100"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Path=Description}" Width="200"/>
                    <DataGridTextColumn Header="Barcode" Binding="{Binding Path=Barcode}" Width="100"/>
                    <DataGridTextColumn Header="Weight" Binding="{Binding Path=Weight}" Width="100"/>
                    <DataGridTextColumn Header="Cost Price" Binding="{Binding Path=CostPrice}" Width="100"/>
                    <DataGridTextColumn Header="Gold Price" Binding="{Binding Path=GoldPrice}" Width="100"/>
                    <DataGridTextColumn Header="Labor Cost" Binding="{Binding Path=LaborCost}" Width="100"/>
                    <DataGridTextColumn Header="Stone Cost" Binding="{Binding Path=StoneCost}" Width="100"/>
                    <DataGridTextColumn Header="Sell Price Ratio" Binding="{Binding Path=SellPriceRatio}" Width="100"/>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit" x:Name="ButtonEdit" CommandParameter="{Binding}"
                                        Click="ButtonEdit_Click_1" 
                                        Height="25" Width="40" 
                                        HorizontalAlignment="Center"
                                        Margin="5"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" x:Name="ButtonDelete" CommandParameter="{Binding}"
                                        Click="ButtonDelete_Click_1"
                                        Height="25" Width="40"
                                        HorizontalAlignment="Center"
                                        Margin="5"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </StackPanel>
</Window>
